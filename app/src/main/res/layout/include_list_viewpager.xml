<?xml version="1.0" encoding="utf-8"?>
<com.sixin.ramber.widgets.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:gravity="bottom"
    app:fadeColor="@android:color/transparent"
    app:panelHeight="55dp"
    app:shadowHeight="5dp">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/quickcontrols_container"/>

</com.sixin.ramber.widgets.slidinguppanel.SlidingUpPanelLayout>